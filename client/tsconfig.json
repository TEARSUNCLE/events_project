{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "#/*": [
        "type/*"
      ]
    }
  },
  // "references": [{ "path": "./tsconfig.node.json" }],
  "include": [
    "src",
    "./src/vite-env.d.ts",
    "./src/custom-types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}